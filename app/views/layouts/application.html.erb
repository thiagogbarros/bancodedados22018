              <%= link_to "Partidos", parties_path, class:"navbar-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Cargos", offices_path, class:"navbar-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Escala", scales_path, class:"navbar-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Classes", populations_path, class:"navbar-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Estados", states_path, class:"navbar-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Poderes", powers_path, class:"navbar-link"%>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

    <%= javascript_include_tag "vendor/jquery/jquery.min.js" %>
    <%= javascript_include_tag "vendor/bootstrap/js/bootstrap.bundle.min.js" %>
    <%= javascript_include_tag "js/clean-blog.min.js" %>

  </body>
</html>
